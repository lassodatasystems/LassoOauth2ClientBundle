<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="oauth2_client.client.class">OAuth2\Client</parameter>
        <parameter key="lasso_oauth2_client_factory.class">Lasso\Oauth2ClientBundle\Factory</parameter>
    </parameters>
    <services>
        <service id="lasso_oauth2_client.client"
                 class="%lasso_oauth2_client.client.class%"
                 factory-service="%lasso_oauth2_client_factory.class%"
                 factory-method="get">
            <argument>%lasso_oauth2_client.client_id%</argument>
            <argument>%lasso_oauth2_client.client_secret%</argument>
            <argument>%lasso_oauth2_client.token_url%</argument>
        </service>
    </services>
</container>

